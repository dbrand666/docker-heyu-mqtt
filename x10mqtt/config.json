{
  "name": "X10 MQTT Gateway",
  "version": "0.1",
  "slug": "x10mqtt",
  "description": "MQTT gateway for the X10 CM11",
  "url": "https://github.com/mmotley999/x10mqtt",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "auto_uart": true,
  "map": ["config:rw", "ssl"],
  "options": {
    "serial_port": "/dev/ttyUSB0",
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_user": "",
	"mqtt_pass": "",
	"cmd_topic": "x10/cmd",
	"stat_topic": "x10/stat"
  },
  "schema": {
    "serial_port": "str",
    "mqtt_host": "str",
	"mqtt_port": "int",
    "mqtt_user": "str?",
	"mqtt_pass": "str?",
	"cmd_topic": "str",
	"stat_topic": "str"
  }
}